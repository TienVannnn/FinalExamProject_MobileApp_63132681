<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:background="@drawable/top_background2"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CREATE ACCOUNT"
        android:textColor="#6672FF"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <EditText
            android:id="@+id/edtUserName"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/edt_background_ls"
            android:ems="10"
            android:layout_margin="10dp"
            android:inputType="text"
            android:drawableStart="@drawable/person"
            android:drawablePadding="16dp"
            android:hint="User name"
            android:textSize="18sp"
            android:textColorHint="#3B608C"/>
        <EditText
            android:id="@+id/edtPhone"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="@drawable/edt_background_ls"
            android:ems="10"
            android:inputType="text"
            android:drawableStart="@drawable/phone"
            android:drawablePadding="16dp"
            android:hint="Phone"
            android:textSize="18sp"
            android:textColorHint="#3B608C"/>
    </LinearLayout>
    <EditText
        android:id="@+id/edtLocation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/edt_background_ls"
        android:ems="10"
        android:inputType="text"
        android:drawableStart="@drawable/location"
        android:drawablePadding="16dp"
        android:hint="Address"
        android:textSize="18sp"
        android:textColorHint="#3B608C"/>

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/edt_background_ls"
        android:ems="10"
        android:inputType="text"
        android:drawableStart="@drawable/email2"
        android:drawablePadding="16dp"
        android:hint="Email"
        android:textSize="18sp"
        android:textColorHint="#3B608C"/>

    <EditText
        android:id="@+id/edtPass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/edt_background_ls"
        android:ems="10"
        android:inputType="text"
        android:drawableStart="@drawable/pass"
        android:drawablePadding="16dp"
        android:hint="Password"
        android:textSize="18sp"
        android:textColorHint="#3B608C"/>

    <ImageView
        android:id="@+id/btnDK"
        android:layout_width="61dp"
        android:layout_height="56dp"
        android:layout_gravity="end"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:src="@drawable/btn_arraw1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Are you new user? "
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="#3b608c"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btnDN"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginEnd="130dp"
            android:text="Login"
            android:textColor="#021832"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>